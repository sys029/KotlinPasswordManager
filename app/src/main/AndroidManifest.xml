<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kotlinpasswordmanager">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:icon="@drawable/ic_launcher_background"
        android:label="@string/app_name" >

        <activity

            android:name=".viewPass"
            android:label="Your Passwords" >
        </activity>



        <activity
            android:name=".PasswordManagerActivity"
            android:label="Password Manager" >
        </activity>


        <activity
            android:name=".masterPass"
            android:label="Change Master Pass" >
        </activity>



        <activity
            android:theme="@style/AppTheme"
            android:name=".password"
            android:label="PassKing" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />


    </application>


</manifest>